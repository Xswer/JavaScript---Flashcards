doctype html
html(lang='en')
    head
        title Flash cards
        link(rel='stylesheet', href='/static/stylesheets/style.css')
    body
        include includes/header.pug
        section.namecard
            .namecard-hello
                if name
                    p.namecard-greeting Welcome, #{name}!
                form.namecard-exit(action='/remove', method='POST')
                    button(type='submit')
                        img(src='/static/img/close.svg')
            block namecard
        block content
